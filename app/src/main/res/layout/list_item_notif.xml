<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivGambarProduk"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rectangle"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvNotificationInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Penawaran Produk"
        android:textSize="10sp"
        android:textColor="#8A8A8A"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toTopOf="@id/ivGambarProduk"
        app:layout_constraintLeft_toRightOf="@id/ivGambarProduk"
        app:layout_constraintRight_toRightOf="@id/tvTanggalNotification"/>

    <TextView
        android:id="@+id/tvProdukInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:text="Jam Tangan Casio"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tvNotificationInfo"
        app:layout_constraintLeft_toRightOf="@id/ivGambarProduk"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvHargaInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:text="Rp 250.000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tvProdukInfo"
        app:layout_constraintLeft_toRightOf="@id/ivGambarProduk"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvAktivitasInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:text="Berhasil Ditawar Rp 200.000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tvHargaInfo"
        app:layout_constraintLeft_toRightOf="@id/ivGambarProduk"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvSpesifikAktivitasInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Kamu akan segera dihubungi penjual via whatsapp"
        android:textSize="10sp"
        android:textColor="#8A8A8A"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/tvAktivitasInfo"
        app:layout_constraintLeft_toRightOf="@id/ivGambarProduk"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTanggalNotification"
        app:layout_constraintBottom_toBottomOf="@id/tvTanggalNotification"/>

    <TextView
        android:id="@+id/tvTanggalNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="20 Apr, 14:04"
        android:textSize="10sp"
        android:textColor="#8A8A8A"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toTopOf="@id/ivGambarProduk"
        app:layout_constraintRight_toLeftOf="@id/ivNotification" />

    <ImageView
        android:id="@+id/ivPembatas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpesifikAktivitasInfo"/>

</androidx.constraintlayout.widget.ConstraintLayout>