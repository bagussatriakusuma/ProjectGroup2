<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCategoryProduk"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        app:cardBackgroundColor="#7126B5"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivIconCategoryProduk"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_fi_box"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produk"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                android:textFontWeight="400"
                android:lineHeight="20dp"
                app:layout_constraintLeft_toRightOf="@id/ivIconCategoryProduk"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCategoryDiminati"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        app:cardBackgroundColor="#E2D4F0"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toRightOf="@id/cvCategoryProduk"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivIconCategoryDiminati"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_vector"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvDiminati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diminati"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                android:textFontWeight="400"
                android:lineHeight="20dp"
                app:layout_constraintLeft_toRightOf="@id/ivIconCategoryDiminati"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCategoryTerjual"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        app:cardBackgroundColor="#E2D4F0"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toRightOf="@id/cvCategoryDiminati"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivIconCategoryTerjual"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_fi_dollar_sign"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvTerjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terjual"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                android:textFontWeight="400"
                android:lineHeight="20dp"
                app:layout_constraintLeft_toRightOf="@id/ivIconCategoryTerjual"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>