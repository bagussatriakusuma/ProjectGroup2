<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.captain_miao.optroundcardview.OptRoundCardView
                android:id="@+id/iv_productDetails"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="45dp"
                android:scaleType="centerCrop"
                app:optRoundCardCornerRadius="20dp"
                app:optRoundCardElevation="0dp"
                app:optRoundCardBackgroundColor="@color/shimer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_productName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/shimer"
                android:fontFamily="@font/nunitobold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_productDetails" />

            <TextView
                android:id="@+id/tv_productCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunitoregular"
                android:background="@color/shimer"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_productName"
                app:layout_constraintStart_toStartOf="@+id/tv_productName"
                app:layout_constraintTop_toBottomOf="@+id/tv_productName" />

            <TextView
                android:id="@+id/tv_productharga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunitosemibold"
                android:textColor="@color/black"
                android:background="@color/shimer"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_productCategory"
                app:layout_constraintStart_toStartOf="@+id/tv_productCategory"
                app:layout_constraintTop_toBottomOf="@+id/tv_productCategory" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_productharga" />

            <com.github.captain_miao.optroundcardview.OptRoundCardView
                android:id="@+id/riv_detailPhotoPenjual"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:optRoundCardBackgroundColor="@color/shimer"
                app:optRoundCardCornerRadius="50dp"
                app:optRoundCardElevation="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@+id/tv_productharga"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <TextView
                android:id="@+id/tv_detailNamaPenjual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/black"
                android:background="@color/shimer"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_productharga"
                app:layout_constraintStart_toEndOf="@+id/riv_detailPhotoPenjual"
                app:layout_constraintTop_toTopOf="@+id/riv_detailPhotoPenjual" />

            <TextView
                android:id="@+id/tv_detailKotaPenjual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunitoregular"
                android:background="@color/shimer"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_detailNamaPenjual"
                app:layout_constraintStart_toStartOf="@+id/tv_detailNamaPenjual"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailNamaPenjual" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/riv_detailPhotoPenjual" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@+id/riv_detailPhotoPenjual"
                app:layout_constraintTop_toBottomOf="@+id/view5" />

            <TextView
                android:id="@+id/tv_deskripsiProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunitosemibold"
                android:textSize="16sp"
                android:background="@color/shimer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>